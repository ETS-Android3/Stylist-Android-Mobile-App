<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/photo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/collection"
        android:textSize="50sp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:fontFamily="@font/college_regular"/>

    <ImageView
        android:id="@+id/outfitView"
        android:layout_width="378dp"
        android:layout_height="507dp"
        android:layout_below="@+id/photo_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/button_rounded" />

    <Button
        android:id="@+id/nextOutfit"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outfitView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="Next Outfit" />

    <Button
        android:id="@+id/previousOutfit"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outfitView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Previous Outfit" />


</RelativeLayout>