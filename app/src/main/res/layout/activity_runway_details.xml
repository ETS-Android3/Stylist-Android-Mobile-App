<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RunwayDetailsActivity">

    <include layout="@layout/activity_runway"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"

        android:layout_width="80dp"
        android:layout_height="380dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/scroll_view_stroke"
        android:scrollbars="vertical" />

    <RelativeLayout
        android:id="@+id/drag_view"
        android:layout_width="220dp"
        android:layout_height="500dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/model_runway"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:padding="10dp"/>

        <RelativeLayout
            android:id="@+id/my_top_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/top_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/bottom_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_dress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/dress_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_shoes_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/shoes_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_accessories_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/accessories_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>