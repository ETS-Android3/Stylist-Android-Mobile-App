<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/model_runway"
        android:layout_width="220dp"
        android:layout_height="480dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="100dp"
        android:foregroundGravity="center"/>

    <TextView
        android:id="@+id/runway_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/runway"
        android:textSize="50sp"
        android:background="@color/main_color"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:src="@drawable/back_arrow"
        android:layout_toLeftOf="@+id/runway_title"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-70dp"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/top_button"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/main_color"
        android:src="@drawable/shirt"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/bottom_button"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/main_color"
        android:src="@drawable/bottom"
        android:layout_below="@+id/top_button"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/dress_button"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/main_color"
        android:src="@drawable/dress"
        android:layout_below="@+id/bottom_button"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/accessories_button"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/main_color"
        android:src="@drawable/purse"
        android:layout_below="@+id/dress_button"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:onClick="onClick"/>

</RelativeLayout>