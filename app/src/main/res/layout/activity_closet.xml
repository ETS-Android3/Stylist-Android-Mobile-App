<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/closet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/closet"
        android:textColor="@color/colorWhite"
        android:textSize="50sp"
        android:background="@color/colorPrimary"
        android:gravity="center"/>
    <Button
        android:id="@+id/button_closet_tops"
        android:text="@string/tops_text"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bordered_rounded"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_above="@+id/button_closet_bottoms"
        android:drawableLeft="@drawable/shirt" />

    <Button
        android:id="@+id/button_closet_bottoms"
        android:text="@string/bottoms_text"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bordered_rounded"
        android:layout_centerInParent="true"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:drawableLeft="@drawable/bottom"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        app:menu="@menu/toolbar" />

</RelativeLayout>
